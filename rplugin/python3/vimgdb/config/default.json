{
    "session_name": "__vimgdb__",
    "#start_directory": "~",
    "#global_options": {
        "default-shell": "/bin/bash",
        "default-command": "/bin/bash"
    },
    "windows": [
        {
            "window_name": "vimgdb@local",
            "layout": "main-vertical",
            "options": {
                "main-pane-width": 0.55
            },
            "focus": true,
            "panes": [
                {
                    "pane_name": "_builtin_main_",
                    "shell_command": [
                        "echo hello",
                        "echo 'this pane should be selected on load'"
                    ],
                    "focus": true
                },
                {
                    "pane_name": "_builtin_gdb_",
                    "shell_command": [
                        "cd /var/log",
                        "echo hello"
                    ]
                }
            ]
        },
        {
            "window_name": "vimgdb@remote",
            "layout": "main-horizontal",
            "options": {
                "main-pane-height": 0.50
            },
            "shell_command_before": "cd /var/www",
            "panes": [
                {
                    "pane_name": "_builtin_main_",
                    "shell_command": [
                        "cd /var/log",
                        "echo hello"
                    ]
                },
                {
                    "pane_name": "_builtin_gdb_",
                    "shell_command": [
                        "echo 'this pane should be focused, when window switched to first time'"
                    ],
                    "focus": true
                },
                {
                    "pane_name": "_builtin_gdbserver_",
                    "shell_command": [
                        "cd /var/log",
                        "echo hello"
                    ]
                }
            ]
        },
        {
            "window_name": "vimgdb@sample",
            "layout": "main-vertical",
            "options": {
                "main-pane-width": 0.55
            },
            "focus": true,
            "panes": [
                {
                    "pane_name": "_builtin_main_",
                    "shell_command": [
                        ""
                    ],
                    "focus": true
                },
                {
                    "pane_name": "_builtin_gdb_",
                    "shell_command": [
                        ""
                    ]
                },
                {
                    "pane_name": "infolocal",
                    "shell_command": [
                        "tail -f /tmp/vimgdb.var2"
                    ]
                }
            ]
        }
    ]
}
